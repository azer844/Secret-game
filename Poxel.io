<!DOCTYPE html><html><head><meta charset="UTF-8"><title>VoxelStrike â€“ Score + Tablette</title><style>    body { margin: 0; background: #111; overflow: hidden; }    canvas { background: #222; display: block; margin: auto; }    /* Joystick */    #joystick-area {        position: fixed;        bottom: 20px; left: 20px;        width: 150px; height: 150px;        background: rgba(255,255,255,0.1);        border-radius: 50%;        touch-action: none;    }    #joystick {        position: absolute;        width: 60px; height: 60px;        background: rgba(255,255,255,0.4);        border-radius: 50%;        top: 45px; left: 45px;        transition: 0.05s;    }    /* Bouton tirer */    #fireBtn {        position: fixed;        bottom: 40px; right: 40px;        width: 100px; height: 100px;        background: rgba(255,0,0,0.5);        border-radius: 50%;        touch-action: none;        display: flex;        justify-content: center;        align-items: center;        color: white; font-size: 20px;        user-select: none;    }    /* Score */    #score {        position: fixed;        top: 10px; left: 10px;        color: white;        font-size: 30px;        font-family: Arial;        z-index: 999;    }</style></head><body><div id="score">Score : 0</div><canvas id="game" width="900" height="600"></canvas><!-- Zone joystick --><div id="joystick-area">    <div id="joystick"></div></div><!-- Bouton tirer --><div id="fireBtn">ðŸ”¥</div><script>const c = document.getElementById("game");const ctx = c.getContext("2d");// Scorelet score = 0;const scoreDiv = document.getElementById("score");// Joueurlet player = { x: 450, y: 300, speed: 3, size: 20 };// DÃ©placement tactilelet moveX = 0, moveY = 0;// Joystickconst area = document.getElementById("joystick-area");const stick = document.getElementById("joystick");area.addEventListener("touchmove", (e) => {    e.preventDefault();    let rect = area.getBoundingClientRect();    let t = e.touches[0];    let x = t.clientX - rect.left;    let y = t.clientY - rect.top;    let dx = x - 75;    let dy = y - 75;    let dist = Math.sqrt(dx*dx + dy*dy);    if (dist > 50) {        dx = dx / dist * 50;        dy = dy / dist * 50;    }    stick.style.left = (45 + dx) + "px";    stick.style.top = (45 + dy) + "px";    moveX = dx / 50;    moveY = dy / 50;});area.addEventListener("touchend", () => {    stick.style.left = "45px";    stick.style.top = "45px";    moveX = 0;    moveY = 0;});// Blocs voxellet blocks = [];for (let i = 0; i < 120; i++) {    blocks.push({        x: Math.random()*880,        y: Math.random()*580,        size: 20,        alive: true    });}// Tirslet bullets = [];// Tir tactile (tir alÃ©atoire directionnel)document.getElementById("fireBtn").addEventListener("touchstart", () => {    bullets.push({        x: player.x,        y: player.y,        dx: 6 * (Math.random()*2 - 1),        dy: 6 * (Math.random()*2 - 1)    });});// Tir souris (vers la souris)document.addEventListener("click", (e) => {    const rect = c.getBoundingClientRect();    const mx = e.clientX - rect.left;    const my = e.clientY - rect.top;    const angle = Math.atan2(my - player.y, mx - player.x);    bullets.push({        x: player.x,        y: player.y,        dx: Math.cos(angle)*8,        dy: Math.sin(angle)*8    });});// Boucle du jeufunction loop() {    ctx.clearRect(0,0,c.width,c.height);    // DÃ©placement joueur    player.x += moveX * player.speed;    player.y += moveY * player.speed;    // Dessin joueur    ctx.fillStyle = "cyan";    ctx.fillRect(player.x - 10, player.y - 10, player.size, player.size);    // Blocs    ctx.fillStyle = "orange";    blocks.forEach(b => {        if (b.alive) ctx.fillRect(b.x, b.y, b.size, b.size);    });    // Balles    ctx.fillStyle = "white";    bullets.forEach(b => {        b.x += b.dx;        b.y += b.dy;        ctx.fillRect(b.x, b.y, 5, 5);        // Collision balle/bloc        blocks.forEach(block => {            if (block.alive &&                b.x < block.x + block.size &&                b.x + 5 > block.x &&                b.y < block.y + block.size &&                b.y + 5 > block.y) {                block.alive = false;                score += 10;                    // +10 points                scoreDiv.textContent = "Score : " + score;            }        });    });    requestAnimationFrame(loop);}loop();</script></body></html>
